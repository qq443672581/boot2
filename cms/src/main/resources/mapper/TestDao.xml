<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dlj1.cms.web.dao.TestDao">

    <select id="selectAll" resultType="hashmap">
        select id from test
        <where >
          <if test="map.id != null" >
              id >= #{map.id}
          </if>
        </where>
    </select>

</mapper>